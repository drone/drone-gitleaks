{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Image",
      "url": "https://raw.githubusercontent.com/zricethezav/gifs/master/gitleakslogo.png"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "Line:",
                  "value": "${formatNumber(lineNumber, 0)}"
                },
                {
                  "title": "Commit:",
                  "value": "${commit}"
                },
                {
                  "title": "Rule:",
                  "value": "${rule}"
                },
                {
                  "title": "Commit:",
                  "value": "${commitMessage}"
                },
                {
                  "title": "Author:",
                  "value": "${author}"
                },
                {
                  "title": "Email:",
                  "value": "${email}"
                },
                {
                  "title": "File:",
                  "value": " ${file}"
                },
                {
                  "title": "Date:",
                  "value": "${date}"
                }
              ],
              "separator": true,
              "$data": "${issues}"
            }
          ],
          "width": "auto",
          "verticalContentAlignment": "Center",
          "style": "attention",
          "bleed": true
        }
      ],
      "spacing": "Small",
      "style": "attention"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}